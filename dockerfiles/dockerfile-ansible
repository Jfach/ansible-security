FROM alpine:3.4
MAINTAINER Tim Kropp @sometheycallme
ENV GOPATH=$HOME/go

RUN apk upgrade --no-cache --available && \
    apk add --no-cache \
      python \
      py-pip \
      bash \
      git \
      go \
      iproute2 \ 
      && \
    apk add --no-cache -X 'http://dl-cdn.alpinelinux.org/alpine/edge/main' \
      'ansible>=2.0' \
      && pip install --upgrade pip \
      && pip install boto \
      && cd /go
      && go get github.com/bketelsen/captainhook \
      && \
    :
WORKDIR /opt/ansible
EXPOSE 8080
